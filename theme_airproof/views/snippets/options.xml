<odoo>
    <template id="snippets" inherit_id="website.snippets" name="Airproof Snippets">
        <xpath expr="//*[@id='default_snippets']" position="before">
            <t id="airproof_theme_snippets">
                <div id="airproof_theme_snippets_category" class="o_panel">
                    <div class="o_panel_header">Theme</div>
                    <div class="o_panel_body">
                        <t t-snippet="theme_airproof.s_airproof" t-thumbnail="/theme_airproof/static/src/snippets/s_airproof/s_product_list.svg">
                            <keywords>Airproof Snippet</keywords>
                        </t>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

    <template id="snippet_options" inherit_id="website.snippet_options" name="Airproof Snippet Options">
        <xpath expr="." position="inside">
            <!-- data-selector - позволяет прицепить к определенному элементу пункт меню редактора и добавлять дополнительные классы(возможно атрибуты через конструкцию data-select-<custom-attribute>) -->
            <div data-selector="table">
                <we-select string="Type of Table">
                    <we-button data-select-class="">Default</we-button>
                    <we-button data-select-class="table-bordered">Bordered</we-button>
                    <we-button data-select-class="table-striped">Stiped</we-button>
                </we-select>
            </div>
            <div data-selector="table, tbody">
                <we-colorpicker string="Color of Borders"
                        t-att-data-apply-to="apply_to"
                        data-select-style="true"
                        t-attf-data-css-property="border-color"
                        data-color-prefix="border-"
                        t-att-data-color="color_variable"/>
            </div>
            <!-- При выборе пункта меню, который закрплен за элементом в data-selector,  срабатывает метод по имени атрибута без слова data и переведенного в camelCase класса из атрибута data-js -->
            <!-- Например при выборе пункта After у класса AirproofTable будет вызван метод startTableFunc -->
            <div data-js="AirproofTable" data-selector=".s_airproof">
                <we-select string="Table description">
                    <we-button data-select-class="s_table_without_descriptions" data-start-table-func="without">Without</we-button>
                    <we-button data-select-class="s_table_descriptions_on_top" data-start-table-func="bottom" data-name="blockquote_cover_opt">After</we-button>
                    <we-button data-select-class="s_table_descriptions_under_bottom" data-start-table-func="top" data-name="blockquote_minimalist_opt">Before</we-button>
                </we-select>
            </div>
            <!-- data-drop-in Пример -->
            <!-- data-drop-in=":not(p).oe_structure:not(.oe_structure_solo), :not(.o_mega_menu):not(p)[data-oe-type=html], :not(p).oe_structure.oe_structure_solo:not(:has(> section, > div))"/> -->

            <!-- data-drop-near Пример -->
            <!-- data-drop-near=".row.o_grid_mode > div" -->
    
        </xpath>
        
    </template>

</odoo>