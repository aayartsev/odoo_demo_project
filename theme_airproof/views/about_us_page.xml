<odoo>
    <record id="page_about_us" model="website.page">
        <field name="name">About us</field>
        <field name="is_published" eval="True"/>
        <field name="key">theme_airproof.page_about_us</field>
        <field name="url">/about-us</field>
        <field name="type">qweb</field>
        <field name="header_overlay" eval="True"/>
        <field name="arch" type="xml">
            <t t-name="theme_airproof.page_about_us">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure">
                        <section style="background-image: url('/web/image/theme_airproof.img_about_01'); min-height: 500px; padding-top:150px; background-position: center center;
                        background-size: cover;">
                            <div class="container">
                                <h1 class="text-white">Airproof About Us</h1>
                            </div>
                        </section>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>