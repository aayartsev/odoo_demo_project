<odoo>
   <record id="website.template_header_default" model="ir.ui.view">
      <field name="active" eval="False"/>
   </record>

   <template id="theme_airproof.template_header_opt" inherit_id="website.snippet_options" name="Header Template - Option">
      <xpath expr="//we-select[@data-variable='header-template']" position="inside">
         <we-button title="Boxed Edit"
            data-name="header_boxed_edit_opt"
            data-customize-website-views="theme_airproof.template_header_boxed_edit"
            data-customize-website-variable="'airproof'"
            data-img="/theme_airproof/static/src/img/wbuilder/header_template_boxed.svg"/>
      </xpath>
   </template>

   <record id="theme_airproof.template_header_boxed_edit" model="theme.ir.ui.view">
      <field name="active" eval="True"/>
   </record>

   <template id="theme_airproof.template_footer_opt" inherit_id="website.snippet_options" name="Footer Template - Option">
      <xpath expr="//we-select[@data-variable='footer-template']" position="inside">
         <we-button title="airproof"
            data-customize-website-views="theme_airproof.template_footer_contact_edit"
            data-customize-website-variable="'airproof'"
            data-img="/theme_airproof/static/src/img/wbuilder/footer_template_contact.svg"/>
      </xpath>
   </template>
   <record id="theme_airproof.template_footer_contact_edit" model="theme.ir.ui.view">
      <field name="active" eval="True"/>
   </record>

   <template id="theme_airproof.mega_menu_options" inherit_id="website.snippet_options" name="Airproof - Mega Menu Options">
      <xpath expr="//we-select[@data-name='mega_menu_template_opt']" position="inside">
          <t t-set="_label">Airproof</t>
          <we-button t-att-data-select-label="_label"
              data-select-template="theme_airproof.s_mega_menu_airproof"
              data-img="/website/static/src/img/snippets_thumbs/s_mega_menu_multi_menus.svg"
              t-out="_label"/>
      </xpath>
  </template>

   <record id="colorpicker" model="theme.ir.ui.view">
      <field name="key">theme_airproof.colorpicker</field>
      <field name="name">Custom Gradients</field>
      <field name="type">qweb</field>
      <field name="inherit_id" ref="web_editor.colorpicker"/>
      <field name="arch" type="xml">
         <xpath expr="//*[@data-name='predefined_gradients']/*" position="before">
            <button class="w-50 o_we_color_btn" style="background-image: linear-gradient(145deg, rgb(5, 85, 94) 0%, rgb(0, 131, 148) 100%);" data-color="linear-gradient(145deg, rgb(5, 85, 94) 0%, rgb(0, 131, 148) 100%)"></button>
         </xpath>
      </field>
   </record>
</odoo>