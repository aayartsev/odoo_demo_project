<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_first_model">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="12"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>

            <div class="page" style="margin: 40px;">
                <table border="1">
                    <tr style="text-align: center; background-color: #7C7BAD; color: #fff;">
                        <th style="padding: 5px;">
                            ID
                        </th>
                        <th style="padding: 5px;">
                            Name
                        </th>
                        <th style="padding-left: 20px; padding-right: 20px;">
                            Field One
                        </th>
                        <th style="padding-left: 20px; padding-right: 20px;">
                            Field Two
                        </th>
                        <th style="padding-left: 20px; padding-right: 20px;">
                            Result
                        </th>
                    </tr>

                    <t t-foreach="docs" t-as="record">
                        <tr>
                            <td style="padding-left: 20px; padding-right: 20px; text-align: center;">
                                <span t-esc="record.id"/>
                            </td>
                            <td style="padding-left: 20px; padding-right: 20px;">
                                <span t-esc="record.name"/>
                            </td>
                            <td style="padding-left: 20px; padding-right: 20px;">
                                <span t-esc="record.field_one"/>
                            </td>
                            <td style="padding-left: 20px; padding-right: 20px;">
                                <span t-esc="record.field_two"/>
                            </td>
                            <td style="padding-left: 20px; padding-right: 20px;">
                                <span t-esc="record.result_field"/>
                            </td>
                        </tr>
                    </t>
                </table>
            </div>

        </t>
    </template>
</odoo>
